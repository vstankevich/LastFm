<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LastFmText">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LastFmText.Big">
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="LastFmText.ExtraBig">
        <item name="android:textSize">@dimen/font_size_extra_big</item>
    </style>

    <style name="LastFmText.ExtraBig.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LastFmText.Big.White">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
